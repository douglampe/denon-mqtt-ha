{
  "switches": [
    {
      "name": "Power",
      "id": "power",
      "setting": "Power",
      "entity": {
        "command_template": "{ \"power\": { \"text\": \"{{ value }}\" } }",
        "value_template": "{{ value_json.power if value_json.power is defined else this.state }}"
      }
    },
    {
      "name": "Mute",
      "id": "mute",
      "setting": "Mute",
      "entity": {
        "command_template": "{ \"mute\": { \"text\": \"{{ value }}\" } }",
        "value_template": "{{ value_json.mute if value_json.mute is defined else this.state }}"
      }
    },
    {
      "name": "Mute Toggle",
      "id": "mute_toggle",
      "entity": {
      }
    },
    {
      "name": "Volume Up/Down",
      "id": "volume_up_down",
      "entity": {
        "command_template": "{ \"volume\": { \"text\": \"{{ value }}\" } }",
        "value_template": "{{ value_json.volume if value_json.volume is defined else this.state }}"
      }
    }
  ],
  "sensors": [
    {
      "name": "Volume Percent",
      "id": "volume_percent",
      "setting": "Volume",
      "entity": {
        "command_template": "{{ (value_json.volume | float)*0.01 if value_json.volume is defined else this.state }}"
      }
    }
  ],
  "fans": [
    {
      "name": "Volume",
      "id": "volume",
      "entity": {
        "command_template": "{ \"volume\": { \"numeric\": \"{{ value }}\" } }",
        "percentage_command_template": "{ \"volume\": { \"numeric\": {{ value }} } }",
        "percentage_value_template": "{{ value_json.volume if value_json.volume is defined else this.state }}",
        "speed_range_min": "1",
        "speed_range_max": "99"
      }
    }
  ],
  "selects": [
    {
      "name": "Source",
      "id": "source",
      "setting": "Source",
      "entity": {
        "command_template": "{ \"source\": { \"text\": \"{{ value }}\" } }",
        "value_template": "{{ value_json.source if value_json.source is defined else this.state }}"
      }
    }
  ]
}