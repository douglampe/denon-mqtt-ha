{
  "name": "denon-mqtt-ha",
  "version": "0.0.1",
  "description": "MQTT Home Assistant configuration companion for denon-mqtt interface for Denon receivers",
  "main": "dist/entryPoint.js",
  "bin": {
    "denon-mqtt-ha": "dist/entryPoint.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.json",
    "dev": "ts-node src/entryPoint.ts",
    "lint": "eslint src --fix --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --config jest.json --coverage --detectOpenHandles",
    "test:nocover": "jest --config jest.json --detectOpenHandles",
    "test:one": "jest --config jest-one.json --detectOpenHandles"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/douglampe/denon-mqtt-ha.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/douglampe/denon-mqtt-ha/issues"
  },
  "homepage": "https://github.com/douglampe/denon-mqtt-ha#readme",
  "dependencies": {
    "commander": "^12.1.0",
    "dotenv": "^16.3.1",
    "mqtt": "^5.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
